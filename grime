#!/bin/bash
#--------------------Author:ekahPruthvi--------------------#

#-----------------init------------------------#
cd ~/
flag=1

#-----------------files&folders---------------#
fnf() {
    local hide="$1"
    if [ "$hide" = 1 ]; then
        folders=$(ls -d */)
        files=$(ls -p | grep -v /)
    else
        folders=$(ls -Ap | grep / | grep "^.")
        files=$(ls -Ap | grep -v / | grep "^.")
    fi
}

#--------------------icons--------------------#
showfile(){
    readarray -t file_array <<<"$files"
    local num=${#file_array[@]}
    local win_width=$(tput cols)
    printf "$win_width\n$num\n"
    if [[ $(( win_width / 15 )) -gt "$num"  ]]; then 
        for word in "${file_array[@]}"; do
            printf  "╔█▀▀▀▀▀▄\t"
        done
        echo 
        for word in "${file_array[@]}"; do
            printf  "║█     █\t"
        done
        echo
        for word in "${file_array[@]}"; do
            printf  "║█#####█\t"
        done
        echo
        for word in "${file_array[@]}"; do
            printf  "║█▄▄▄▄▄█\t"
        done
        echo
        for word in "${file_array[@]}"; do
            printf  "╚══════╝\t"
        done
        echo
        for word in "${file_array[@]}"; do
            printf  "%-15.15s " "$word"
        done
    else 
        echo "ERROR:SCREEN WIDTH LIMITED"
    fi

}

#--------------------menu--------------------#
while true; do
    read -rsn1 input
    if [ "$input" = "a" ]; then
        clear
        fnf "$flag"
        showfile
    elif [ "$input" = "h" ]; then
        clear
        if [[ "$flag" -eq 1 ]]; then
            echo "hide toggle off"
            flag=0
        else
            echo "hide toggle on"
            flag=1
        fi
    elif [ "$input" = "s" ]; then
        clear
        read -s complete
        echo "$complete"
    elif [ "$input" = "q" ]; then
        clear
        break
    fi
done